{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "types": ["react-native", "jest"],
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "baseUrl": ".",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./src/components/*"],
      "@desktop/*": ["./desktop/*"],
      "@github/*": ["./.github/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@libs/*": ["./src/libs/*"],
      "@navigation/*": ["./src/libs/Navigation/*"],
      "@pages/*": ["./src/pages/*"],
      "@styles/*": ["./src/styles/*"],
      "@src/*": ["./src/*"],
      "@userActions/*": ["./src/libs/actions/*"]
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "tests",
    "website",
    "web",
    "docs",
    "assets",
    "config",
    "desktop",
    "jest",
    "__mocks__",
    ".github/**/*",
    ".storybook/**/*",
    "workflow_tests",
    "scripts",
    "**/node_modules/*",
    "**/dist/*",
    ".github/actions/**/index.js",
    "**/docs/*"
  ]
}
