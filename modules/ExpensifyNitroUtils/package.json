{
    "name": "@expensify/nitro-utils",
    "version": "0.0.1",
    "main": "src/index",
    "react-native": "src/index",
    "description": "React Native Utils Module with Nitro optimization",
    "source": "src/index",
    "files": [
        "src",
        "react-native.config.js",
        "lib",
        "android/build.gradle",
        "android/gradle.properties",
        "android/CMakeLists.txt",
        "android/src",
        "ios/**/*.h",
        "ios/**/*.m",
        "ios/**/*.mm",
        "ios/**/*.cpp",
        "ios/**/*.swift",
        "app.plugin.js",
        "*.podspec",
        "README.md"
    ],
    "scripts": {
        "postinstall": "tsc || exit 0;",
        "typecheck": "tsc --noEmit",
        "clean": " rm -rf android/build node_modules/**/android/build lib",
        "specs-debug": "npm run --filter=\"**\" typescript && npx nitrogen --logLevel=\"debug\"",
        "typescript": "tsc --noEmit false",
        "specs": "npx nitrogen"
    },
    "author": "Expensify",
    "license": "MIT",
    "homepage": "https://github.com/mrousavy/nitro#readme",
    "keywords": ["react-native", "nitro"],
    "devDependencies": {
        "react": "*",
        "react-native": "*",
        "react-native-nitro-modules": "*"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    }
}
