# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

skip_docs
opt_out_usage

platform :android do
  desc "Generate a new APK"
  lane :beta do
    ENV["ENVFILE"]=".env.production"

    gradle(
      project_dir: './android',
      task: 'assemble',
      build_type: 'Release',
    )
  end
end

platform :ios do
  desc "Build and upload app to TestFlight"
  lane :beta do
    require 'securerandom'
    ENV["ENVFILE"]=".env.production"

    install_provisioning_profile(
        path: "./ios/expensify_appstore.mobileprovision"
    )

    keychain_password = SecureRandom.uuid

    create_keychain(
        name: "ios-build.keychain",
        password: keychain_password,
        default_keychain: "true",
        unlock: "true",
        timeout: "3600",
        add_to_search_list: "true"
    )

    import_certificate(
        certificate_path: "./ios/Certificates.p12",
        keychain_name: "ios-build.keychain",
        keychain_password: keychain_password
    )

    build_app(
        workspace:'./ios/ReactNativeChat.xcworkspace',
        scheme: "ReactNativeChat",
        export_options: {
            method: "app-store",
            provisioningProfiles: {
                "com.chat.expensify.chat" => "expensify_appstore.mobileprovision"
            }
        }
    )

    upload_to_testflight(
        distribute_external: true,
        reject_build_waiting_for_review: true,
        changelog: "Thank you for beta testing the Expensify Chat, this version includes bug fixes and improvements.",
        groups: ["Beta"],
        demo_account_required: true,
        beta_app_review_info: {
            contact_email: "mobile@expensify.com",
            contact_first_name: "Andrew",
            contact_last_name: "Gable",
            contact_phone: "+1 916 698 2582",
            demo_account_name: "andrew+empty@expensifail.com",
            demo_account_password: "asdfASDF00",
            notes: "Use the account provided. Thank you for the review."
        }
    )
  end
end
